  <main class="main">
    <section id="login" class="section">
      <div class="container">
        <div class="row gy-4">

          <div class="col-12 col-lg-8">
            <% if (Object.keys(user).length === 0) { %>
            <p><strong>Enter your email address to get verification code.</strong></p>
            <form id="emailVerifyForm" method="POST">
              <div class="col-lg-8">
                <label class="mb-2" for="email">Email</label>
                <input class="form-control" type="email" id="email" name="email" required>
              </div>
              <button class="book-a-table-login" type="submit">Reset Password</button>
              <div id="reg-spinner" class="spinner-grow spinner-grow-sm text-danger mx-3" role="status">
                <span class="sr-only"></span>
              </div>
              <p id="verifyMessage"></p>
            </form>
            <% } else { %>
            <p class="my-4"><strong>Enter new password for user <%= user.NAME %> </strong></p>
            <form id="resetPasswordForm" method="POST">
              <input type="hidden" class="form-control" id="userID" name="userID" value="<%= user.ID_USER %>" required>
              <div class="col-lg-8 mb-3">
                <label for="newPassword" class="form-label">New Password</label>
                <input type="password" class="form-control" id="newPassword" name="newPassword" required>
              </div>
              <div class="col-lg-8 mb-3">
                <label for="confirmPassword" class="form-label">Confirm New Password</label>
                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
              </div>
              <button class="book-a-table-login" type="submit">Submit</button>
              <div id="reg-spinner" class="spinner-grow spinner-grow-sm text-danger mx-3" role="status">
                <span class="sr-only"></span>
              </div>
              <p id="registerMessage"></p>
            </form>
            <% } %>

          </div>
        </div>
      </div>
    </section>
