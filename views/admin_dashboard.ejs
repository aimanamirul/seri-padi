                    <td><%= booking.BOOKING_TEL %></td>
                    <td><%= booking.BOOKING_EMAIL %></td>
                    <td><%= booking.BOOKING_PAX %></td>

                    <!-- <td><%= booking.BOOKING_STATUS %></td> -->

                    <% if(booking.BOOKING_STATUS === "N") {  %>
                    <td>NEW</td>
                    <% } else if(booking.BOOKING_STATUS === "X") { %>
                    <td>CANCELLED</td>
                    <% } else if(booking.BOOKING_STATUS === "C") { %>
                    <td>CONFIRMED</td>
                    <%} else {%>
                    <td></td>
                    <% } %>

                    <td>
                      <% if(booking.BOOKING_STATUS === "N") { %>
                      <button class="btn btn-primary confirm-booking" data-booking-id="<%= booking.ID_BOOKING %>">Confirm</button>
                      <button class="btn btn-danger cancel-booking" data-booking-id="<%= booking.ID_BOOKING %>">Cancel</button>
