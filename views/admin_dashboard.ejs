  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Get all the navigation links
      const navLinks = document.querySelectorAll('.nav-link');

      // Get all the section contents
      const sectionContents = document.querySelectorAll('.section-content');

      // Function to show only the selected section and hide others
      function showSection(sectionId) {
        sectionContents.forEach(content => {
          if (content.id === sectionId) {
            content.style.display = 'block';
          } else {
            content.style.display = 'none';
          }
        });
      }

      // Add click event listeners to each navigation link
      navLinks.forEach(link => {
        link.addEventListener('click', function(event) {
          event.preventDefault(); // Prevent default link behavior

          // Get the href attribute to determine which section to show
          const sectionId = this.getAttribute('href').substring(1); // Remove the #

          navLinks.forEach(navLink => {
            navLink.classList.remove('active');
          });

          link.classList.add('active');

          // Show the corresponding section
          showSection(sectionId);
        });
      });

      // Initially show the first section (optional)
      showSection('bookings');

      const cancelButtons = document.querySelectorAll('.cancel-booking');
      const confirmButtons = document.querySelectorAll('.confirm-booking');

      if (cancelButtons) {
        cancelButtons.forEach(button => {
          button.addEventListener('click', async function() {
            if (confirm('Confirm to cancel this booking?')) {
              const bookingId = this.getAttribute('data-booking-id');

              try {
                const response = await fetch(`/admin_actions/${bookingId}`, {
                  method: 'PUT', // Use PUT method for updating
                  headers: {
                    'Content-Type': 'application/json'
                  },
                  body: JSON.stringify({
                    BOOKING_STATUS: 'X'
                  }) // Update status to ''
                });

                if (response.ok) {
                  alert('Booking canceled successfully!');
                  window.location.reload(); // Reload the page after cancellation (optional)
                  showSection('bookings');
                } else {
                  alert('Failed to cancel booking.');
                }
              } catch (error) {
                console.error('Error canceling booking:', error);
                alert('Failed to cancel booking.');
              }
            }
          });
        });
      }

      if (confirmButtons) {
        confirmButtons.forEach(button => {
          button.addEventListener('click', async function() {
            if (confirm('Confirm to confirm this booking?')) {
              const bookingId = this.getAttribute('data-booking-id');

              try {
                const response = await fetch(`/admin_actions/${bookingId}`, {
                  method: 'PUT', // Use PUT method for updating
                  headers: {
                    'Content-Type': 'application/json'
                  },
                  body: JSON.stringify({
                    BOOKING_STATUS: 'C'
                  }) // Update status to ''
                });

                if (response.ok) {
                  alert('Booking confirmed successfully!');
                  window.location.reload(); // Reload the page after cancellation (optional)
                  showSection('bookings');
                } else {
                  alert('Failed to confirm booking.');
                }
              } catch (error) {
                console.error('Error canceling booking:', error);
                alert('Failed to cancel booking.');
              }
            }
          });
        });
      }
    });
  </script>
